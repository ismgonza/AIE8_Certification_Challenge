# ============================================================================
# API Keys
# ============================================================================

# Required: OpenAI API key for LLM (gpt-4o-mini) and embeddings (text-embedding-3-small)
OPENAI_API_KEY=sk-proj-your-key-here

# Optional: Tavily API key for web search (real-time implementation examples)
TAVILY_API_KEY=tvly-your-key-here

# Optional: Cohere API key for reranking (improves retrieval precision)
COHERE_API_KEY=your-cohere-key-here

# Optional: LangSmith API key for tracing and monitoring (https://smith.langchain.com)
LANGCHAIN_API_KEY=lsv2_pt_your-key-here


# ============================================================================
# Model Configuration
# ============================================================================

# LLM model for generation
LLM_MODEL=gpt-4o-mini

# Embedding model for vector search
EMBEDDING_MODEL=text-embedding-3-small


# ============================================================================
# Qdrant Vector Database
# ============================================================================

# Mode: "docker" (persistent) or "memory" (temporary)
QDRANT_MODE=docker

# Qdrant connection (if using docker)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Collection name
QDRANT_COLLECTION=security_knowledge


# ============================================================================
# Document Processing
# ============================================================================

# Chunk size in characters (1500 = ~300-400 tokens)
CHUNK_SIZE=1500

# Chunk overlap (20% overlap for context preservation)
CHUNK_OVERLAP=300


# ============================================================================
# Retrieval Settings
# ============================================================================

# Number of documents to retrieve
TOP_K=3

# Enable Cohere reranking (requires COHERE_API_KEY)
USE_RERANKING=True

# Reranker model to use
RERANKER_MODEL=cohere


# ============================================================================
# Logging
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO


# ============================================================================
# Data Path
# ============================================================================

# Path to PDF documents (relative to backend/)
DATA_PATH=data/
